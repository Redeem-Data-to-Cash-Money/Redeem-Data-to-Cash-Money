import React, { useState } from 'react';
import DataList from '../components/DataList';
import PaystackIntegration from '../components/PaystackIntegration';
import RedeemForm from '../components/RedeemForm';

export default function AdminDashboard() {
  const [paystackKey, setPaystackKey] = useState('');
  const [otopayVendorID, setOtopayVendorID] = useState('');

  const handleConnectPaystack = () => {
    if (!paystackKey) {
      alert("Please enter Paystack Secret Key");
      return;
    }
    alert("Paystack connected successfully!");
  };

  const handleConnectOtopay = () => {
    if (!otopayVendorID) {
      alert("Please enter Otopay Vendor ID");
      return;
    }
    alert("Otopay connected successfully!");
  };

  return (
    <div style={{ padding: '20px', fontFamily: 'Arial, sans-serif' }}>
      <h1>Admin Dashboard</h1>

      <div style={{ marginTop: '20px' }}>
        <h2>Connect Payment Services</h2>
        <input
          type="text"
          value={paystackKey}
          onChange={(e) => setPaystackKey(e.target.value)}
          placeholder="Paystack Key"
        />
        <button onClick={handleConnectPaystack}>Connect Paystack</button>

        <input
          type="text"
          value={otopayVendorID}
          onChange={(e) => setOtopayVendorID(e.target.value)}
          placeholder="Otopay Vendor ID"
        />
        <button onClick={handleConnectOtopay}>Connect Otopay</button>
      </div>

      <DataList />
      <RedeemForm />
      <PaystackIntegration />
    </div>
  );
}
